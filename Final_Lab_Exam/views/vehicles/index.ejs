<div class="container mt-4">
  <h1>All Vehicles</h1>
  <a href="/vehicles/new" class="btn btn-primary mb-3">Add Vehicle</a>
  <div class="row">
    <% vehicles.forEach(v => { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="/uploads/<%= v.image %>" class="card-img-top" alt="<%= v.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= v.name %> - <%= v.brand %></h5>
            <p class="card-text">Type: <%= v.type %></p>
            <p class="card-text">Price: $<%= v.price %></p>
            <a href="/vehicles/<%= v._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
            <form action="/vehicles/<%= v._id %>/delete" method="POST" class="d-inline">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
